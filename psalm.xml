<?xml version="1.0"?>
<psalm
    errorLevel="5"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorBaseline="psalm-baseline.xml"
>
    <projectFiles>
        <directory name="lib/Doctrine/ORM" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="tests/Doctrine/Performance" />
            <directory name="tests/Doctrine/Tests/Models" />
            <directory name="tests/Doctrine/Tests/Mocks" />
            <directory name="tests/Doctrine/Tests/Proxies" />
            <directory name="tests/Doctrine/Tests/ORM/Tools/Export/export" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <ParadoxicalCondition>
            <errorLevel type="suppress">
                <!-- See https://github.com/vimeo/psalm/issues/3381 -->
                <file name="lib/Doctrine/ORM/Mapping/ClassMetadataInfo.php"/>
            </errorLevel>
        </ParadoxicalCondition>
    </issueHandlers>
</psalm>
